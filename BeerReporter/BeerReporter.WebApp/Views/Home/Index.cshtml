@model ReportViewModel

@{
    ViewData["Title"] = "Generate a beer report:";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    @using (Html.BeginForm("GenerateReport", "Home", FormMethod.Post, new { }))
    {
        @Html.LabelFor(m => m.Location)
        @Html.TextBoxFor(m => m.Location)

        <input type="submit" value="Generate Report" class="btn btn-block btn-primary" />
    }

    <h3 class="text-success">@Html.Raw(ViewData.Model.GenerateMessage)</h3>
</div>

<h2>Fetch last generated beer report:</h2>

<div class="row">
    @using (Html.BeginForm("FetchReport", "Home", FormMethod.Post, new { }))
    {
        <input type='Submit' value='Fetch Report' class="btn btn-block btn-primary" />
    }

    <h3 class="text-success">@Html.Raw(ViewData.Model.FetchMessage)</h3>
</div>

<div class="row">
    @if (!string.IsNullOrEmpty(ViewData.Model.SasUri))
    {
        <div class="item">
            <img src="@ViewData.Model.SasUri" alt="Beer Report" style="margin: auto" />
        </div>
    }
</div>
